<div class="page-header">
  <%= link_to new_artist_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Artist
  <% end %>
  <h1>Listing artists</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Email</th>
            <th>Twitter</th>
            <th>Facebook</th>
            <th>Nickname</th>
            <th>Name</th>
            <th>State</th>
            <th>City</th>
            <th>Portafolio 1</th>
            <th>Portafolio 2</th>
            <th>Portafolio 3</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @artists) do |artist| %>
            <td><%= artist.email %></td>
            <td><%= artist.twitter %></td>
            <td><%= artist.facebook %></td>
            <td><%= artist.nickname %></td>
            <td><%= artist.name %></td>
            <td><%= artist.state %></td>
            <td><%= artist.city %></td>
            <td><%= artist.portafolio_1 %></td>
            <td><%= artist.portafolio_2 %></td>
            <td><%= artist.portafolio_3 %></td>
            <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
