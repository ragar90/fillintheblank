<div class="page-header">
  <%= link_to artists_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to @artist, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-info-sign"></span>
    Show
  <% end %>
  <h1>Editing artist</h1>
</div>

<%= form_for(@artist, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @artist.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@artist.errors.count, "error") %> prohibited this artist from being saved:</h4>

      <ul>
      <% @artist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :avatar, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :avatar, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :nickname, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nickname, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :rate_range, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :rate_range, :class => "form-control", data:{:"slider-min" => 10, :"slider-max" => 1000, :"slider-step"=>10, :"slider-value" => 100, :"slider-value" => "[#{@artist.rate_range}]"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :twitter, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :twitter, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :facebook, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :facebook, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :portafolio_1, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :portafolio_1, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :portafolio_2, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :portafolio_2, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :portafolio_3, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :portafolio_3, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>

<%= content_for :javascript_fixes do%>
  <script type="text/javascript">
    $("#artist_rate_range").slider({});
  </script>
<% end %>

